<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard de Superhéroes</title>
</head>
<body>
    <h1>Lista de Superhéroes</h1>

    <!--  Botón de crear aquí -->
    <button onclick="window.location.href='/api/heroes/agregar'" style="margin-left: 5px;">✏️ Crear</button>

    <ul>
        <% superheroes.forEach(hero => { %>
            <li>
                <h2><%= hero.nombreSuperHeroe %> (<em><%= hero.nombreReal %></em>)</h2>
                <p><strong>Edad:</strong> <%= hero.edad %></p>
                <p><strong>Planeta de Origen:</strong> <%= hero.planetaOrigen %></p>
                <p><strong>Debilidad:</strong> <%= hero.debilidad %></p>
               
                <p><strong>Poderes:</strong>
                    <ul>
                        <% hero.poderes.forEach(poderes => { %>
                            <li><%= poderes %></li>
                        <% }) %>
                    </ul>
                </p>

                <p><strong>Aliados:</strong>
                    <ul>
                        <% hero.aliados.forEach(aliado => { %>
                            <li><%= aliado %></li>
                        <% }) %>
                    </ul>
                </p>
                <p><strong>Enemigos:</strong>
                    <ul>
                        <% hero.enemigos.forEach(enemigo => { %>
                            <li><%= enemigo %></li>
                        <% }) %>
                    </ul>
                </p>
                <p><strong>Creador:</strong> <%= hero.creador %></p>
            <!--  Botón de editar aquí -->
              <button onclick="window.location.href='/api/heroes/<%= hero._id %>/edit'" style="margin-left: 5px;">✏️ Editar</button>

            
            <!--  Botón de eliminar aquí -->
               <form action="/api/heroes/<%= hero._id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit" onclick="return confirm('¿Estás seguro que querés eliminar este héroe?')">🗑️ Eliminar</button>
                </form>

               
            </li>
                   
        <% }); %>
    </ul>
</body>
</html>
